let a=prompt("Введите что-нибудь:");
let b;
a=+a;
b=typeof(a);
if (b==="number"){
  if (isNaN(a)===true){
    alert ("Похоже, вы ввели не число :(")
  } else{
    if (a%2===0){
      alert ("Четное число")
    }else{
      alert ("Нечетное число")
    }
  }
} else {
  alert ("Что-то пошло не так, не удалось преобразовать введенное значение")
}